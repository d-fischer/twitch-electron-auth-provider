{
	"compilerOptions": {
		"outDir": "lib",
		"module": "commonjs",
		"target": "es5",
		"lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
		"sourceMap": true,
		"moduleResolution": "node",
		"rootDir": "src",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"importHelpers": true,
		"strict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"lib",
	]
}
